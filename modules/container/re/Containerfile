# re-profile container
# Purpose: reverse engineering / vulnerability research CLI tooling
# Base: offsec-toolbox (rootless zsh + minimal Arch)

FROM localhost/offsec-toolbox:0.1.0

# Copy RE tooling manifest
COPY manifests/re-packages.txt /tmp/re-packages.txt

# Install RE packages
RUN pacman -Sy --noconfirm --needed $(grep -vE '^\s*#|^\s*$' /tmp/re-packages.txt) && \
    pacman -Scc --noconfirm && \
    rm -f /tmp/re-packages.txt

# Default runtime user
USER operator
WORKDIR /work

# Default shell
CMD ["zsh", "-l"]

