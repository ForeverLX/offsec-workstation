[Unit]
Description=offsec-workstation Weekly Maintenance Timer
Documentation=https://github.com/ForeverLX/offsec-workstation

[Timer]
# Run every Sunday at 3 AM
OnCalendar=Sun *-*-* 03:00:00
# Run on boot if missed
Persistent=true
# Random delay of 0-30 minutes to avoid system load spikes
RandomizedDelaySec=30min

[Install]
WantedBy=timers.target
