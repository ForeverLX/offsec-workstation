// AD Layout - Active Directory Assessment
// Usage: zellij --layout ad.kdl
// Container: offsec-ad

layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }

    tab name="ğŸ” Enum" focus=true {
        pane split_direction="vertical" {
            pane size="50%" {
                name "ldap-enum"
                focus true
            }
            pane size="50%" {
                name "smb-enum"
            }
        }
    }

    tab name="ğŸ©¸ Bloodhound" {
        pane split_direction="horizontal" {
            pane size="60%" {
                name "bloodhound-gui"
            }
            pane size="40%" {
                name "collector"
            }
        }
    }

    tab name="ğŸ« Kerberos" {
        pane split_direction="vertical" {
            pane size="50%" {
                name "kerberoasting"
            }
            pane size="50%" {
                name "asreproasting"
            }
        }
    }

    tab name="ğŸ”€ Lateral" {
        pane split_direction="horizontal" {
            pane size="60%" {
                name "psexec-wmi"
            }
            pane size="40%" {
                name "current-access"
            }
        }
    }

    tab name="ğŸ‘‘ DA" {
        pane split_direction="vertical" {
            pane size="50%" {
                name "dcsync"
            }
            pane size="50%" {
                name "golden-ticket"
            }
        }
    }

    tab name="ğŸ“ Notes" {
        pane split_direction="horizontal" {
            pane size="70%" {
                name "ad-notes"
            }
            pane size="30%" {
                name "target-list"
            }
        }
    }
}

floating_panes {
    pane {
        name "domain-lookup"
        x "10%"
        y "10%"
        width "80%"
        height "40%"
    }
}
