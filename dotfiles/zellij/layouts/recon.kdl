// Recon Layout - Intelligence Gathering
// Usage: zellij --layout recon.kdl
// Container: offsec-web

layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }

    tab name="ğŸ” Scanning" focus=true {
        pane split_direction="vertical" {
            pane size="60%" {
                name "nmap/masscan"
                focus true
            }
            pane split_direction="horizontal" {
                pane size="70%" {
                    name "scan-results"
                }
                pane size="30%" {
                    name "quick-notes"
                }
            }
        }
    }

    tab name="ğŸŒ Web" {
        pane split_direction="vertical" {
            pane size="50%" {
                name "gobuster/ffuf"
            }
            pane size="50%" {
                name "whatweb/httpx"
            }
        }
    }

    tab name="ğŸ”— DNS" {
        pane split_direction="vertical" {
            pane size="50%" {
                name "dig/nslookup"
            }
            pane size="50%" {
                name "subdomain-enum"
            }
        }
    }

    tab name="ğŸ•µï¸ OSINT" {
        pane split_direction="vertical" {
            pane size="60%" {
                name "passive-recon"
            }
            pane size="40%" {
                name "osint-notes"
            }
        }
    }

    tab name="ğŸ“ Notes" {
        pane {
            name "engagement-notes"
        }
    }
}

floating_panes {
    pane {
        name "quick-lookup"
        x "10%"
        y "10%"
        width "80%"
        height "80%"
    }
}
